@model QuanLyTiemTra.Models.NhaCungCap

@{
    ViewBag.Title = "ThemNCC";
    Layout = null;
}

<html>
<head>
    <meta charset="utf-8">
    <title>Thêm nhà cung cấp</title>

    <link href="~/css/NguyenLieu.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <div class="title">
            Thêm nhà cung cấp
        </div>
        <form method="post" action="ThemNCC">

            <div class="field">
                <input type="text" name="TenNhaCC">
                <label>Nhà Cung Cấp</label>
            </div>
            <div class="field">
                <input type="text" name="Email">
                <label>Email</label>
            </div>
            <div class="field">
                <input type="text" name="DiaChi">
                <label>Địa Chỉ</label>
            </div>
            <div class="field">
                <input type="text" name="Sdt">
                <label>PhoneNumber</label>
            </div>



            <div class="field">
                <input type="submit" value="Thêm">
            </div>
            <div class="signup-link">
                <a href="/NhaCC/NhaCC">Quay về</a>
            </div>
        </form>
    </div>
</body>
</html>
